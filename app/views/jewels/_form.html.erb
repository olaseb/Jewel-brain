<%= simple_form_for(@jewel) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-default btn-success' %>
  </div>
<% end %>
